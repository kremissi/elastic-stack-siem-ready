# Filebeat sample for remote hosts
filebeat.inputs:
  - type: filestream
    id: system-logs
    enabled: false
    paths:
      - /var/log/*.log

# Enable common modules on target hosts as needed:
# filebeat modules enable system nginx apache mysql

setup.kibana:
  host: "http://YOUR_KIBANA_HOST:5601"
  username: "elastic"
  password: "YOUR_PASSWORD"

output.logstash:
  hosts: ["YOUR_LOGSTASH_HOST:5044"]
